@model IEnumerable<restaurant_web_app.Models.BookNow>

    @{
    ViewData["Title"] = "Bookings";
    Layout = "_Layout_Admin";
    }

    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create">Bookings</a>
    </p>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().NameSurname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().TableFor)
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
            {
                <tr id="row-@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.NameSurname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TableFor)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div id="message" style="margin-top: 20px;"></div>
