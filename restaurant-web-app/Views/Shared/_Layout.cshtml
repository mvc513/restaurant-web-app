<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tasteful Treats</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/restaurant_web_app.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    

    <style>
        .btn-spacing {
            margin-right: 10px;
        }

        .tastefulTreats {
            margin: 0 320px;
        }

        * {
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" id="myDIV">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        @Html.Partial("~/Views/BookNow/_BookNowModal.cshtml")
        @Html.Partial("_FindLocation")


        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - Tasteful Treats  - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)

        <script>
            var buttonLocations = document.createElement("button");
            buttonLocations.innerHTML = "Our Location";
            buttonLocations.classList.add("btn", "btn-primary", "btn-spacing");
            buttonLocations.setAttribute("data-bs-toggle", "modal");
            buttonLocations.setAttribute("data-bs-target", "#findLocationModal");

            var buttonBookNow = document.createElement("button");
            buttonBookNow.innerHTML = "Book Now";
            buttonBookNow.classList.add("btn", "btn-primary");
            buttonBookNow.setAttribute("data-bs-toggle", "modal");
            buttonBookNow.setAttribute("data-bs-target", "#bookNowModal");

            var container = document.querySelector(".container-fluid");
            container.appendChild(buttonLocations);
            container.appendChild(buttonBookNow);
        </script>
    </div>
</body>
</html>
